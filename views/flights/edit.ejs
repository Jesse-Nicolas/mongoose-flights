<%- include('../partials/html-head')  %> 
<%- include('../partials/nav')  %>

<main>
<h2>Edit Flight</h2>
<form action="/flights/<%= flight.id %>?_method=PUT" method="POST">
  <label for="airline-input">Airline:</label>
  <select name="airline">
    <option value="<%= flight.airline %>"><%= flight.airline %></option>
    <option value="American">American</option>
    <option value="Southwest">Southwest</option>
    <option value="United">United</option>
  </select>
  <label for="airport-input">Airport:</label>
  <select name="airport">
    <option value="<%= flight.airport %>"><%= flight.airport %></option>
    <option value="DEN">DEN</option>
    <option value="AUS">AUS</option>
    <option value="DFW">DFW</option>
    <option value="LAX">LAX</option>
    <option value="SAN">SAN</option>
  </select>

  <label for="num-input">Flight Number:</label>
  <input type="number" name="flightNo" id="num-input" value="<%= flight.flightNo %>">

  <label for="date-input">Departure Date:</label>
  <input type="date" name="departs" id="date-input" value="<%= flight.departs.toISOString().slice(0, 10) %>">

  <button type="submit">Save Changes</button>
</form>
</main>

<%- include('../partials/footer')  %> 